<div class="container">
  <div class="row">
    <div class="col-5">
      <h1><%= @user.name %>さんとのチャット</h1> 
      
      <div id="chat">
        <%= render 'chats/chat_comments', chats: @chats %>
        
        
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col-4">
        <div class="new-chat">
          <%= form_with model: @chat do |f| %>
            <div class="form-group">
              <%= f.text_field :message, class:'form-control' %>
              <%= f.hidden_field :room_id %>
            </div>
            <%= f.submit '送信', class:"btn btn-outline-primary" %>
          <% end %>
        </div>
      </div>
  </div>
        
      
     
</div>