<h1><%= @user.name %>さんとのチャット</h1> 
<%= form_with model: @chat, local: true do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
  <%= f.submit '送信' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
    <tr id="chat_<%= chat.id %>">
     <%= render "chats/chat_comments", chat: chat %>
    </tr>
    <% end %>
  </tbody>
</table>