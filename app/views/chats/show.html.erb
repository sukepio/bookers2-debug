<div class="container">
  <div class="row">
    <h1><%= @user.name %>さんとのチャット</h1> 
    
    <table class="table">
      <thead>
        <tr>
          <th>投稿者</th>
          <th>投稿内容</th>
        </tr>
      </thead>
      <tbody id="chats">
        <% @chats.each do |chat| %>
        <tr>
          <%= render 'chats/chat_comments', chat: chat %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="new-chat">
      <%= form_with model: @chat do |f| %>
        <div class="form-group">
          <%= f.text_field :message, class:'form-control' %>
          <%= f.hidden_field :room_id %>
        </div>
        <%= f.submit '送信', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>