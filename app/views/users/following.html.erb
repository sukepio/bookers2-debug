<div class="container">
  <div class="row">
  <div class="col">
    <h1>Follow Users</h1>
    <% if @followings.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @followings.each do |following| %>
        <tr>
          <td><%= attachment_image_tag(following, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= following.name %></td>
          <td>フォロー数:<%= following.follower.count %></td>
          <td>フォロワー数:<%= following.followed.count%></td>
          <td><%= link_to 'Show', user_path(following) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <% else %>
    <h5>ユーザーはいません</h5>
  </div>
    <% end %>
</div>